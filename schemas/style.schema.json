{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StyleMetadata",
  "type": "object",
  "required": ["character", "background", "color"],
  "properties": {
    "character": {
      "type": "object",
      "properties": {
        "appearance": { "type": "string" },
        "outfit": { "type": "string" }
      }
    },
    "background": {
      "type": "object",
      "properties": {
        "environment": { "type": "string" },
        "lighting": { "type": "string" }
      }
    },
    "color": {
      "type": "object",
      "properties": {
        "primary": { "type": "string" },
        "secondary": { "type": "string" }
      }
    }
  }
}